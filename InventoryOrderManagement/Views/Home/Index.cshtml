@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InventoryManageMate</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <header>
        <nav class="bg-white shadow-md">
            <div class="container mx-auto px-4 py-2 flex justify-between items-center">
                <button class="block lg:hidden px-2 py-1 text-gray-600" id="menu-btn">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                    </svg>
                </button>
                <div class="lg:flex flex-grow justify-between items-center">
                    <div class="hidden lg:flex space-x-4">
                        <a class="text-gray-700 hover:text-blue-600" href="/">Home</a>
                        <a class="text-gray-700 hover:text-blue-600" href="/Orders/List">All Orders (Admin)</a>
                        <a class="text-gray-700 hover:text-blue-600" href="/OrderDetails/List">All Orders (User)</a>
                    </div>
                </div>
            </div>
            <div class="lg:hidden bg-white shadow-md" id="mobile-menu">
                <a class="block px-4 py-2 text-gray-700 hover:bg-gray-200" href="/">Home</a>
                <a class="block px-4 py-2 text-gray-700 hover:bg-gray-200" href="/Orders/List">All Orders (Admin)</a>
                <a class="block px-4 py-2 text-gray-700 hover:bg-gray-200" href="/OrderDetails/List">All Orders (User)</a>
            </div>
        </nav>
    </header>

    <div class="min-h-screen flex flex-col justify-center py-6 sm:py-12">
        <div class="relative py-3 sm:max-w-xl sm:mx-auto">
            <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
            </div>
            <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
                <div class="max-w-md mx-auto text-center">
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-4">Welcome</h1>
                    <p class="text-lg text-gray-700 mb-6">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-blue-600 hover:underline">building Web apps with ASP.NET Core</a>.</p>
                </div>
            </div>
        </div>
    </div>

    <footer class="border-t border-gray-200 mt-4">
        <div class="container mx-auto px-4 py-2 text-center text-gray-600">
            &copy; 2024 - InventoryManageMate -
            <a href="/Home/Privacy" class="text-blue-600 hover:underline">Privacy</a>
        </div>
    </footer>

    <script>
        document.getElementById('menu-btn').addEventListener('click', function () {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        });
    </script>
</body>
</html>
