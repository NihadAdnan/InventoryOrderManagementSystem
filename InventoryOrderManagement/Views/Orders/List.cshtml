@model List<InventoryOrderManagement.DTO.DTOs.AddOrderViewModelDTO>

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">

    <div class="relative py-3 w-full">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>

        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20 w-full">
            <div class="max-w-full mx-auto">
                <div class="mb-6">
                    <h1 class="text-2xl font-semibold text-center">Order History</h1>
                </div>
                <div class="text-right mb-4">
                    <a asp-controller="Orders" asp-action="Add" class="bg-green-500 text-white rounded-md px-4 py-2 hover:bg-green-600 transition">Add An Order</a>
                    <a asp-controller="Orders" asp-action="ExportToCsv" class="bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition ml-2">Download CSV</a>
                    <a asp-controller="Orders" asp-action="ExportToPdf" class="bg-red-500 text-white rounded-md px-4 py-2 hover:bg-red-600 transition ml-2">Download PDF</a>
                </div>

                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Address</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Amount</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Payment Method</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var order in Model)
                            {
                                @* <input type="text" asp-for="@order.OrderID" hidden /> *@
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap">@order.CustomerName</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@order.CustomerEmail</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@order.ShippingAddress</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@order.TotalAmount</td>
                                    <td class="px-6 py-4 whitespace-nowrap">@order.PaymentMethod</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <a asp-controller="Orders" asp-action="Edit" asp-route-id="@order.OrderID" class="bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
