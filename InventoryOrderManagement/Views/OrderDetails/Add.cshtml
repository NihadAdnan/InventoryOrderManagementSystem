@model InventoryOrderManagement.AggregateRoot.Models.OrderDetail

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 w-full">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>
        <div class="relative px-4 py-10 bg-white shadow-lg w-full">

            <div class="max-w-md mx-auto">
                <div class="mb-6">
                    <h1 class="text-2xl font-semibold text-center">Add An Order</h1>
                </div>
                <form method="post" class="space-y-6">
                    <div class="relative">
                        <label for="name" class="block text-gray-700">Product Name</label>
                        <input type="text" id="name" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-blue-600" required asp-for="ProductName" />
                    </div>

                    <div class="relative">
                        <label for="quantity" class="block text-gray-700">Quantity</label>
                        <input type="number" id="quantity" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-blue-600" step="1" required asp-for="Quantity" />
                    </div>

                    <div class="relative">
                        <label for="amount" class="block text-gray-700">Unit Price</label>
                        <input type="number" id="amount" class="peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:border-blue-600" step="0.01" required asp-for="UnitPrice" />
                    </div>

                    <div class="relative flex justify-center">
                        <button type="submit" class="bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
