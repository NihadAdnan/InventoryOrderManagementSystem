@{
}
@model List<InventoryOrderManagement.DTO.DTOs.AddDetailOrderViewModelDTO>

<div class="min-h-screen bg-gray-100 py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 w-full">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-300 to-blue-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl"></div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20 w-full">
            <div class="w-full mx-auto">
                <h1 class="text-2xl font-semibold text-center">Order Details</h1>

                <div class="text-right mt-5 space-x-2">
                    <a asp-controller="OrderDetails" asp-action="Add" class="bg-green-500 text-white px-4 py-2 rounded-md hover:bg-green-600">Add An Order</a>
                    <a asp-controller="OrderDetails" asp-action="ExportToCsv" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600">Download CSV</a>
                    <a asp-controller="OrderDetails" asp-action="ExportToPdf" class="bg-red-500 text-white px-4 py-2 rounded-md hover:bg-red-600">Download PDF</a>
                </div>

                <div class="mt-5 overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Product Name</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Unit Price</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Price</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Action</th>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            @foreach (var orderDetail in Model)
                            {
                                <tr>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">@orderDetail.ProductName</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@orderDetail.Quantity</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@orderDetail.UnitPrice</td>
                                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@(@orderDetail.Quantity * orderDetail.UnitPrice)</td>
                                    <td class="px-6 py-4 whitespace-nowrap">
                                        <a asp-controller="OrderDetails" asp-action="Edit" asp-route-id="@orderDetail.OrderDetailID" class="bg-blue-500 text-white rounded-md px-4 py-2 hover:bg-blue-600 transition">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
